{
  "version": 2,
  "builds": [
    {
      "src": "index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "../templates/**",
          "../static/**",
          "../app.py",
          "../.env*",
          "../requirements.txt"
        ]
      }
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/api/index.py" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Content-Security-Policy", "value": "default-src 'self'; script-src 'self' 'unsafe-inline' https:; style-src 'self' 'unsafe-inline' https:; img-src 'self' data: https:; font-src 'self' https: data:;" }
      ]
    }
  ],
  "env": {
    "FLASK_APP": "app.py",
    "FLASK_ENV": "production",
    "PYTHONPATH": "/var/task:/var/runtime",
    "PYTHONUNBUFFERED": "true",
    "UPLOAD_FOLDER": "/var/task/static/images/products",
    "SQLALCHEMY_DATABASE_URI": "sqlite:////tmp/britocell.db"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "regions": ["gru1"]
}
