# Configurações do Flask
FLASK_APP=app.py
FLASK_ENV=development  # Altere para 'production' em produção

# Chave secreta para sessões (substitua por uma chave segura)
# Pode ser gerada com: python -c 'import secrets; print(secrets.token_hex(16))'
SECRET_KEY=sua_chave_secreta_muito_segura_aqui

# Configurações de upload
UPLOAD_FOLDER=static/images/products
MAX_CONTENT_LENGTH=16777216  # 16MB em bytes

# Configurações de autenticação (serão usadas apenas se config.json não existir)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=senha_admin_padrao

# Configurações de depuração (desative em produção)
DEBUG=True

# Observação: As credenciais de administrador são armazenadas em config.json
# que está no .gitignore por questões de segurança.